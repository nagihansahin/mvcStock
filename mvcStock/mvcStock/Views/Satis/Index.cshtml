@model mvcStock.Models.Entity.SatisTbl
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Satış Sayfası</h2>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Satış Yap</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Ekranı</h2>
            </div>
            <form method="post" action="/Satis/SatisEkle">
                <div class="modal-body">
                    <label>Ürün Adı:</label>
                    @Html.TextBoxFor(m => m.Urun, new { @class = "form-control" })
                    <br />
                    <label>Müşteri Adı ve Soyadı:</label>
                    @Html.TextBoxFor(m => m.musteri, new { @class = "form-control" })
                    <br />
                    <label>Ürün Adet:</label>
                    @Html.TextBoxFor(m => m.adet, new { @class = "form-control" })
                    <br />
                    <label>Ürün Fiyatı:</label>
                    @Html.TextBoxFor(m => m.fiyat, new { @class = "form-control" })
                    <br />

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info">Satış Yap</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>


